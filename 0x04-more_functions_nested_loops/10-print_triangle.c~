#include "main.h"

/**
 * print_triangle - print a triangle
 *@size: the size of the triangle
 */

void print_triangle(int size)
{
  int i;
  int j;

  if (size > 0)
    {
  for (i = 1; i <= size; i++)
    {
      for (j = 1; j <= i; i++)
	{
	  if (j = i)
	    _putchar('#');
	  else
	    _putchar(' ');
	}
    }
    }
  else
    _putchar('\n');
}
